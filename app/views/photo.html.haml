.row.sp-bottom-sm
  -if prev
    .col-sm-1.col-sm-offset-4
      %a.thumb{href: "#{url_for("/photo/#{prev.id}")}"}
        %img.prev{class: "rotate-#{prev.orientation}", src: "#{url_for("/#{prev.thumbnail}")}"}
  -else
    .col-sm-5
      &nbsp;
  -if nxt
    .col-sm-1.col-sm-offset-2
      %a.thumb{href: "#{url_for("/photo/#{nxt.id}")}"}
        %img.next{class: "rotate-#{nxt.orientation}", src: "#{url_for("/#{nxt.thumbnail}")}"}
.row
  .col-sm-6
    %img.full{class: "rotate-#{photo.orientation}", src: "#{url_for("/pictures#{photo.path}")}"}
  .col-sm-6
    .sp-bottom-sm
      %button.btn{ data: { toggle: "collapse", target: "#photo_info" } }
        Photo Information
    #photo_info.collapse
      %table.table.table-condensed
        %tbody
          -photo.columns.each do |column|
            %tr
              %td
                =column
              %td
                =photo[column]
